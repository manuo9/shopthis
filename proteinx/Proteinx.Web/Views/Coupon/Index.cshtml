@{
}
@model List<Coupon>

<h2>Coupons</h2>
<a href="@Url.Action("Create", "Coupon")" class="btn btn-success">Create New Coupon</a>
<a href="@Url.Action("DownloadExcel", "Coupon")" class="btn btn-success">Export to Excel</a>
<table class="table">
    <thead>
        <tr>
            <th>Coupon ID</th>
            <th>Coupon Code</th>
            <th>Discount Amount</th>
            <th>Min Amount</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var coupon in Model)
        {
            <tr>
                <td>@coupon.CouponId</td>
                <td>@coupon.CouponCode</td>
                <td>@coupon.DiscountAmount</td>
                <td>@coupon.MinAmount</td>
                <td>
                    <a href="@Url.Action("DetailsByIndex", "Coupon", new { id = coupon.CouponId })">View </a>
                    <a href="@Url.Action("Edit", "Coupon", new { id = coupon.CouponId })" class="btn btn-warning">Edit</a>
                    <form method="post" asp-action="Delete" asp-route-id="@coupon.CouponId" style="display:inline;" 
      onsubmit="return confirm('Are you sure you want to delete this coupon?');">
    <button type="submit" class="btn btn-danger">Delete</button>
</form>
                    


                </td>
            </tr>
        }
    </tbody>
</table>

